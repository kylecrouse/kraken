<div class="header">
  <a class="pull-left" data-ng-href="/"><span class="glyphicon glyphicon-chevron-left"></span></a>
  <h1>Register</h1>
</div>
<div class="content">
  {{#if message}}
    <div class="fade in alert alert-danger">
      <strong>{{message}}</strong>
    </div>
  {{/if}}
  <form class="form" action="/users" method="post">
    <div class="form-group">
      <input id="name" class="form-control" type="text" name="name" placeholder="Full name" value="{{user.name}}">
    </div>
    <div class="form-group">
      <input id="email" class="form-control" type="text" name="email" placeholder="Email" value="{{user.email}}">
    </div>
    <div class="form-group">
      <input id="email" class="form-control" type="text" name="username" placeholder="Username" value="{{user.username}}">
    </div>
    <div class="form-group">
      <input id="password" class="form-control" type="password" name="password" placeholder="Password">
    </div>
    <div class="footer">
      <button class="btn btn-primary btn-block" type="submit">Register</button>
      <p class="text-center" style="margin: 10px 0;">— or —</p>
      <a class="btn btn-primary btn-block" href="/auth/facebook">Connect with Facebook</a>
      <p class="text-center" style="font-size: 12px; margin: 20px 0 0;">Already have an account? <a href="/signin">Log in <span class="glyphicon glyphicon-chevron-right"></span></a></p>
    </div>
  </form>
</div>